<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!--// ========= Containers ========= //-->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource Bg.Brush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Border.Brush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{DynamicResource Radius.M}"/>
        <Setter Property="Padding" Value="{DynamicResource Space.4}"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Border.card:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
        <Setter Property="BoxShadow" Value="0 4 16 0 #2A000000"/>
    </Style>
</Styles>
