<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:EdAssistant.Controls">
    <Style Selector="controls|GroupBox">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Header -->
                    <Border ZIndex="1"
                            Background="{DynamicResource Ed.Bg}"
                            Padding="5,0,5,0"
                            Margin="10,0,0,0">
                        <TextBlock Text="{TemplateBinding Header}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Ed.Text}"/>
                    </Border>

                    <!-- Content Area -->
                    <Border Grid.RowSpan="2"
                            Grid.ColumnSpan="2"
                            Padding="0,5,0,0"
                            CornerRadius="4"
                            Margin="0,10,0,0"
                            BorderBrush="{DynamicResource Ed.Border.Mid}"
                            BorderThickness="1"
                            Background="{DynamicResource Ed.Bg.Panel}">
                        <ContentPresenter Name="PART_ContentPresenter"
                                          Padding="8"
                                          Content="{TemplateBinding Content}"/>
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
