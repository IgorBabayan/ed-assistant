<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:EdAssistant.Controls">
	<Styles.Resources>
		<Color x:Key="Ed.Accent.Color">#FF7A00</Color>
		<SolidColorBrush x:Key="Ed.Accent" Color="{StaticResource Ed.Accent.Color}"/>
		<SolidColorBrush x:Key="Ed.Accent.Glow" Color="#FF9A3C"/>

		<SolidColorBrush x:Key="Ed.Bg" Color="#0B0C0E"/>
		<SolidColorBrush x:Key="Ed.Bg.Panel" Color="#111216"/>
		<SolidColorBrush x:Key="Ed.Border.Mid" Color="#23262B"/>
		<SolidColorBrush x:Key="Ed.Border.Light" Color="#2D3138"/>
		<SolidColorBrush x:Key="Ed.Text" Color="#F2F2F2"/>
		<SolidColorBrush x:Key="Ed.Text.Dim" Color="#A0A5AD"/>

		<SolidColorBrush x:Key="Ed.Accent.Secondary" Color="#19FFFF"/>

		<FontFamily x:Key="Ed.Font">Michroma, Orbitron, Segoe UI, Ubuntu, Arial</FontFamily>

		<CornerRadius x:Key="Ed.Radius.Small">4</CornerRadius>
		<CornerRadius x:Key="Ed.Radius.Mid">6</CornerRadius>
		<Thickness x:Key="Ed.Padding">12,8</Thickness>

		<LinearGradientBrush x:Key="Ed.Grad.AccentLine" StartPoint="0,0" EndPoint="1,0">
			<GradientStop Color="#FF7A00" Offset="0"/>
			<GradientStop Color="#D06000" Offset="1"/>
		</LinearGradientBrush>

		<DropShadowEffect x:Key="Ed.PanelShadow" BlurRadius="28" Opacity="0.4" OffsetX="0" OffsetY="0"
                          Color="#0D0E12"/>
	</Styles.Resources>

	<!-- Global typography/foreground -->
	<Style Selector="TextBlock, TextBox">
		<Setter Property="TextElement.FontFamily" Value="{DynamicResource Ed.Font}"/>
		<Setter Property="TextElement.Foreground" Value="{DynamicResource Ed.Text}"/>
	</Style>
	<Style Selector="Button, ToggleButton, ListBoxItem, ComboBoxItem, CheckBox, RadioButton">
		<Setter Property="Foreground" Value="{DynamicResource Ed.Text}"/>
	</Style>
</Styles>
