<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EdAssistant.ViewModels.Pages"
             xmlns:ext="clr-namespace:EdAssistant.Helpers.Extensions"
             xmlns:dto="clr-namespace:EdAssistant.DTO"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
             x:Class="EdAssistant.Views.Pages.StorageView"
             x:CompileBindings="False"
             x:DataType="vm:StorageViewModel">
	<Grid Margin="{DynamicResource Space.4}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!--// Header Section //-->
		<Grid Grid.Row="0" Margin="0,0,0,20">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<!--// Title and Search //-->
			<StackPanel Grid.Column="0" Orientation="Vertical" Spacing="12">
				<TextBlock Text="{ext:Localize StorageWindow.Title}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Text.Primary}"/>

				<TextBox Text="{Binding SearchText}"
                         Watermark="{ext:Localize Common.Watermark}"
                         Classes="search"/>
			</StackPanel>

			<!--// Category Filter Chips //-->
			<StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="8"
                        VerticalAlignment="Bottom">

				<ToggleButton IsChecked="{Binding ShowItems}"
                              Content="{Binding ItemsText}"
                              Classes="filter"
                              CornerRadius="20"
                              Padding="16,8"
                              FontSize="13"
                              FontWeight="Medium"/>

				<ToggleButton IsChecked="{Binding ShowComponents}"
                              Content="{Binding ComponentsText}"
                              Classes="filter"
                              CornerRadius="20"
                              Padding="16,8"
                              FontSize="13"
                              FontWeight="Medium"/>

				<ToggleButton IsChecked="{Binding ShowConsumables}"
                              Content="{Binding ConsumablesText}"
                              Classes="filter"
                              CornerRadius="20"
                              Padding="16,8"
                              FontSize="13"
                              FontWeight="Medium"/>

				<ToggleButton IsChecked="{Binding ShowData}"
                              Content="{Binding DataText}"
                              Classes="filter"
                              Padding="16,8"
                              FontSize="13"
                              FontWeight="Medium"/>
			</StackPanel>
		</Grid>

		<!--// Items Grid //-->
		<ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Visible">
			<ItemsControl ItemsSource="{Binding FilteredItems}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<UniformGrid Columns="4"
                                   HorizontalAlignment="Stretch"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>

				<ItemsControl.ItemTemplate>
					<DataTemplate DataType="dto:CategorizedInventoryItemDTO">
						<Border Classes="storage-item-card"
                                CornerRadius="12"
                                Padding="16"
                                Margin="8"
                                MinHeight="120"
                                Background="{DynamicResource Card.Background}"
                                BorderBrush="{DynamicResource Card.Border}"
                                BorderThickness="1">

							<Border.Styles>
								<Style Selector="Border.storage-item-card">
									<Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
								</Style>
								<Style Selector="Border.storage-item-card:pointerover">
									<Setter Property="BoxShadow" Value="0 4 16 0 #20000000"/>
									<Setter Property="BorderBrush" Value="{DynamicResource Accent.Primary}"/>
								</Style>
							</Border.Styles>

							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto"/>
									<RowDefinition Height="*"/>
									<RowDefinition Height="Auto"/>
								</Grid.RowDefinitions>

								<!--// Icon Section //-->
								<Border Grid.Row="0"
                                        Background="{DynamicResource Card.Icon.Background}"
                                        Width="48"
                                        Height="48"
                                        CornerRadius="8"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,12">
									<!-- TODO: implement image -->
									<Border Background="{DynamicResource Accent.Secondary}"
                                            Width="24"
                                            Height="24"
                                            CornerRadius="4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
								</Border>

								<!--// Content Section //-->
								<StackPanel Grid.Row="1"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Spacing="4">

									<TextBlock Text="{Binding NameLocalised}"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Foreground="{DynamicResource Text.Primary}"
                                               MaxLines="2"/>

									<TextBlock Text="{Binding Category, Converter={StaticResource EnumLocalizationConverter}}"
                                               FontSize="12"
                                               Classes="title"
                                               FontWeight="Medium"
                                               TextAlignment="Center"
                                               Opacity="0.8"/>
								</StackPanel>

								<!--// Category Indicator //-->
								<Border Grid.Row="2"
                                        Height="3"
                                        CornerRadius="1.5"
                                        Margin="0,8,0,0"
                                        HorizontalAlignment="Stretch"
                                        Background="{Binding CategoryColor}"/>
							</Grid>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>

		<!--// Empty State (when no items) //-->
		<StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="16"
                    IsVisible="{Binding HasNoItems}">

			<Border Background="{DynamicResource Card.Icon.Background}"
                    Width="64"
                    Height="64"
                    CornerRadius="32"
                    HorizontalAlignment="Center">
				<Border Background="{DynamicResource Text.Tertiary}"
                        Width="32"
                        Height="32"
                        CornerRadius="16"
                        Opacity="0.3"/>
			</Border>

			<StackPanel Spacing="8" HorizontalAlignment="Center">
				<TextBlock Text="{ext:Localize Filtering.NoItemsFound}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource Text.Primary}"/>

				<TextBlock Text="{ext:Localize Filtering.AdjustingFilters}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource Text.Secondary}"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>